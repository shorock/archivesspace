<div class="titlepage">
  <div class="title"><%= h @report.title %></div>

  <dl>
    <dt><%= i18n('number_of_records') %></dt>
    <dd><%= h @report.total_count %></dd>
    <dt><%= i18n('total_transferred') %></dt>
    <dd><%= h @report.total_transferred %></dd>
  </dl>
</div>

<% @report.each do |accession| %>
  <% next if accession.fetch('rightsTransferred') == 0 %>

  <div class="report-record">
    <div class="identifier"><%= i18n('identifier_prefix') %> <%= format_4part(accession.fetch('accessionNumber')) %></div>
    <div class="record-title"><%= h accession.fetch('title') %></div>

    <dl>
      <dt><%= i18n('accession_date') %></dt>
      <dd><%= format_date(accession.fetch('accessionDate')) %></dd>
      <dt><%= i18n('processed_date') %></dt>
      <dd><%= format_date(accession.fetch('accessionProcessedDate')) %></dd>
      <% if accession.fetch('extentNumber') %>
        <dt><%= i18n('extent') %></dt>
        <dd><%= format_number(accession.fetch('extentNumber')) %> <%= accession.fetch('extentType') %></dd>
      <% end %>
      <dt><%= i18n('cataloged') %></dt>
      <dd><%= format_boolean(accession.fetch('cataloged') == 1) %></dd>
      <dt><%= i18n('rights_and_restrictions') %></dt>
      <dd>
        <% if accession.fetch('restrictionsApply') == 1 %>
          <span style="color: red"><%= i18n('retrictions_apply') %></span>
        <% else %>
          <%= i18n('no_restrictions') %>
        <% end %>
      </dd>
      <dt><%= i18n('rights_transferred') %></dt>
      <dd>
        <% if accession.fetch('rightsTransferred') == 1 %>
          <%= i18n('rights_transferred_true') %>
        <% else %>
          <%= i18n('rights_transferred_false') %>
        <% end %>
      </dd>
    </dl>

    <%= text_section(i18n('rights_transferred_note'), accession.fetch('rightsTransferredNote')) %>

    <%= text_section(i18n('use_restrictions_note'), accession.fetch('useRestrictionsNote')) %>

    <%= text_section(i18n('access_restrictions_note'), accession.fetch('accessRestrictionsNote')) %>

    <%= subreport_section(i18n('linked_resources'), AccessionResourcesSubreport, accession) %>
  </div>
<% end %>
